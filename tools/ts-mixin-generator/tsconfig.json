{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../dist/ts-mixin-generator",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2018"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/templates/**/*.template"]
}
